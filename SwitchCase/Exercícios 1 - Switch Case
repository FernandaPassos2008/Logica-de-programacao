//Pergunta6
let categoriaVeiculo = prompt("Digite a categoria do veículo (compacto, SUV, caminhão):")

switch (categoriaVeiculo) {
    case "compacto":
        console.log("Veículos Compactos: Fiat Mobi, Renault Kwid, Chevrolet Onix")
        break
    case "suv":
        console.log("SUVs: Jeep Renegade, Toyota Corolla Cross, Hyundai Creta")
        break
    case "caminhão":
        console.log("Caminhões: Volvo FH, Scania R440, Mercedes-Benz Actros")
        break
    default:
        console.log("Categoria inválida. Tente: compacto, SUV ou caminhão.")
        break
}


//Pergunta7
let tempo = prompt("Quantas horas foram permanecidas no local? ")
switch (tempo) {
    case "1" :
    case "2":
    case "3" :
        console.log("R$ 05,00")
        break
    case "4":
    case "5" :
    case "6" :
    case "7" :
        console.log("R$ 10,00")
        break
    case "8" :
        console.log("R$ 20,00")
        break
    default:
    console.log("O valor excedeu as horas e será cobrado R$40,00 do valor da diária")
}


