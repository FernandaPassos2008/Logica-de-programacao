//Pergunta11
let idade = prompt("Digite sua idade:")

if (idade < 18) {
    console.log("Dificuldade recomendada: Leve - foco em exercícios lúdicos e educativos.")
} else if (idade >= 18 && idade <= 40) {
    console.log("Dificuldade recomendada: Moderada a Intensa - treino funcional, HIIT, musculação.")
} else if (idade > 40 && idade <= 60) {
    console.log("Dificuldade recomendada: Moderada - exercícios de resistência e alongamento.")
} else if (idade > 60) {
    console.log("Dificuldade recomendada: Leve a Moderada - caminhadas, hidroginástica, pilates.")
} else {
    console.log("Idade inválida. Digite um número válido.")
}


//pergunta12
let generoMusical = prompt("Digite um gênero musical (rock, clássico, samba, eletrônico):")

switch (generoMusical) {
    case "rock":
        console.log("Instrumentos comuns no Rock: Guitarra elétrica, bateria, baixo.")
        break
    case "clássico":
        console.log("Instrumentos comuns na Música Clássica: Violino, piano, violoncelo.")
        break
    case "samba":
        console.log("Instrumentos comuns no Samba: Pandeiro, cavaquinho, surdo.")
        break
    case "eletrônico":
        console.log("Instrumentos comuns na Música Eletrônica: Sintetizadores, controladores MIDI, computadores.")
        break
    default:
        console.log("Gênero musical inválido. Tente: rock, clássico, samba ou eletrônico.")
        break
}


//Pergunta13
let areaTecnologia = prompt("Digite a área de interesse (front-end, back-end, mobile):")

switch (areaTecnologia.toLowerCase()) {
    case "front-end":
        console.log("Cursos disponíveis para Front-end: HTML, CSS, JavaScript, React")
        break;
    case "back-end":
        console.log("Cursos disponíveis para Back-end: Node.js, Java, Python, Banco de Dados")
        break
    case "mobile":
        console.log("Cursos disponíveis para Mobile: Flutter, React Native, Kotlin, Swift")
        break
    default:
        console.log("Área inválida. Tente: front-end, back-end ou mobile.")
        break
}


//Pergunta14
let idadeAtleta = prompt("Digite a idade do atleta:")

if (idadeAtleta < 12) {
    console.log("Nível de habilidade: Iniciante - ideal para atividades recreativas e fundamentos do esporte.")
} else if (idadeAtleta >= 12 && idadeAtleta < 18) {
    console.log("Nível de habilidade: Intermediário - treinamento técnico e desenvolvimento físico.")
} else if (idadeAtleta >= 18 && idadeAtleta <= 35) {
    console.log("Nível de habilidade: Avançado - alta performance e competições.")
} else if (idadeAtleta > 35) {
    console.log("Nível de habilidade: Master - foco em condicionamento e bem-estar com técnicas adaptadas.")
} else {
    console.log("Idade inválida. Digite um número válido.")
}


//Pergunta15
let categoriaDesafio = prompt("Digite a categoria do desafio matemático (básico, intermediário, avançado):")
switch (categoriaDesafio.toLowerCase()) {
    case "básico":
        console.log("Desafio: Operações simples como adição, subtração, multiplicação e divisão.")
        break
    case "intermediário":
        console.log("Desafio: Frações, porcentagens, problemas de lógica.")
        break
    case "avançado":
        console.log("Desafio: Álgebra, equações, funções e problemas complexos.")
        break
    default:
        console.log("Categoria inválida. Tente: básico, intermediário ou avançado.")
        break
}
