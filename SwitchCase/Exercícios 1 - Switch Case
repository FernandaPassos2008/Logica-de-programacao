ECHO est  ativado.
//Pergunta1
let idioma = prompt("Escolha um idioma Ingles,Portugues,Frances ou Espanhol: ")
switch (idioma) {
        case "Portugues":
            console.log("Olá! Seja bem-vindo!")
            break;
        case "Ingles":
            console.log("Hello! Welcome!")
            break
        case "frances":
            console.log("Bonjour! Bienvenue!")
            break
        case "espanhol":
            console.log("¡Hola! ¡Bienvenido!")
            break
        default:
            console.log("Idioma não reconhecido. Tente: Portugues, Ingles,Frances ou Espanhol.")
}


//Pergunta2
let diaDaSemana= 3
let nomeDoDia

switch (diaDaSemana) {
  case 1:
    nomeDoDia = "Domingo"
    break
  case 2:
    nomeDoDia = "Segunda-feira"
    break
  case 3:
    nomeDoDia = "Terça-feira"
    break
  case 4:
    nomeDoDia = "Quarta-feira"
    break
  case 5:
    nomeDoDia = "Quinta-feira"
    break
    nomeDoDia = "Sexta-feira"
    break
  case 7:
    nomeDoDia = "Sábado"
  default:
    nomeDoDia = "Dia inválido"
}

console.log("Hoje é " + nomeDoDia)


//Pergunta3
let numeroTransporte = prompt("Digite um número para escolher o transporte (1 - carro, 2 - bicicleta, 3 - ônibus, 4 - trem, 5 - avião):")

switch (numeroTransporte) {
    case "1":
        console.log("Você escolheu: Carro")
        break
    case "2":
        console.log("Você escolheu: Bicicleta")
        break
    case "3":
        console.log("Você escolheu: Ônibus")
        break
    case "4":
        console.log("Você escolheu: Trem")
        break
    case "5":
        console.log("Você escolheu: Avião")
        break
    default:
        console.log("Opção inválida. Digite um número de 1 a 5.")
        break
}


