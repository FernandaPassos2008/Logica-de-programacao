ECHO est  ativado.
let respostaCorreta = 0
let respostaIncorreta = 0

console.log("Quem ganhou como melhor filme em 2025")
console.log("A - A substancia")
console.log("B - Anora")
console.log("C - Ainda estou aqui")
let pergunta1 = prompt ("Digite a alternativa correta: ")
switch (true){
    case pergunta1 == "B" || pergunta1 == "Anora":
    console.log("Alternativa Correta!\n")
    respostaCorreta ++
    break
    default:
    console.log("Alternativa Errada!\n")
    respostaIncorreta ++
    break
}
//pergunta2
console.log("Qual mes nós estamos?")
console.log("A - Dezembro")
console.log("B - Fevereiro")
console.log("C - Abril")
let pergunta2 = prompt("Digite a alternativa correta:")
switch (true){
    case pergunta2 == "C" || pergunta2 == "Abril":
    console.log("Alternativa Correta!\n")
    respostaCorreta ++
    break
    default:
    console.log("Alternativa Errada!\n")
    respostaIncorreta ++
    break
}
